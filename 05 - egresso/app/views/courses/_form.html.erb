<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :site %>
    <%= form.text_field :site %>
  </div>

  <div class="field">
    <%= form.label :sigla %>
    <%= form.text_field :sigla %>
  </div>

  <h3>Coordenador:</h3>

  <%= form.fields_for :coordinator do |coordinator_field| %>
    <div class="field">
      <%= coordinator_field.label :nome %>
      <%= coordinator_field.text_field :nome %>
    </div>

    <div class="field">
      <%= coordinator_field.label :matricula %>
      <%= coordinator_field.text_field :matricula %>
    </div>

    <div class="field">
      <%= coordinator_field.label :senha %>
      <%= coordinator_field.text_field :senha %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
